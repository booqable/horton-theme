<style>
  {%- for scheme in settings.color_schemes -%}
    {%- assign scheme_classes = scheme_classes | append: ', .color-' | append: scheme.id -%}

    {% if forloop.first %}
      :root,
    {% endif %}
    .color-{{ scheme.id }} {
      --background-accent:         {{ scheme.settings.background_accent }};
      --background-accent-hover:   {{ scheme.settings.background_accent | append: 'CC' }};
      --background-accent-hover-2: {{ scheme.settings.background_accent | append: "1A" }};
      --background-primary:        {{ scheme.settings.background }};
      --background-primary-60:     {{ scheme.settings.background |  append: '99' }};
      --color-accent:              {{ scheme.settings.color_accent }};
      --color-border:              {{ scheme.settings.color_primary | append: '26' }};
      --color-image-placeholder:   {{ scheme.settings.color_primary | append: '26' }};
      --color-outline:             {{ scheme.settings.color_accent_outline }};
      --color-primary:             {{ scheme.settings.color_primary }};
      --color-secondary:           {{ scheme.settings.color_secondary }};
    }
  {%- endfor -%}

  :root {
    --animation-duration:     {{ settings.animation_duration | append: "s" | default: "0.4s" }};
    --font-body:              "{{ settings.font_body.family | default: Montserrat }}", {{ settings.font_body.fallback_families | default: sans-serif }};
    --font-heading:           "{{ settings.font_heading.family | default: Marcellus }}", {{ settings.font_heading.fallback_families | default: sans-serif }};
    --font-tagline:           "{{ settings.font_tagline.family | default: Montserrat }}", {{ settings.font_tagline.fallback_families | default: sans-serif }};
    --font-height-xs:         {{ settings.font_height_xs | default: "1" }};
    --font-height-sm:         {{ settings.font_height_sm | default: "1.2" }};
    --font-height-md:         {{ settings.font_height_md | default: "1.3333" }};
    --font-height-lg:         {{ settings.font_height_lg | default: "1.4" }};
    --font-height-xl:         {{ settings.font_height_xl | default: "1.5" }};
    --font-size-h1:           {{ settings.font_size_h1 | append: "px" | default: "80px" }};
    --font-size-h2:           {{ settings.font_size_h2 | append: "px" | default: "64px" }};
    --font-size-h3:           {{ settings.font_size_h3 | append: "px" | default: "56px" }};
    --font-size-h4:           {{ settings.font_size_h4 | append: "px" | default: "32px" }};
    --font-size-h5:           {{ settings.font_size_h5 | append: "px" | default: "24px" }};
    --font-size-h6:           {{ settings.font_size_h6 | append: "px" | default: "20px" }};
    --font-size-large:        {{ settings.font_size_large | append: "px" | default: "18px" }};
    --font-size-regular:      {{ settings.font_size_regular | append: "px" | default: "16px" }};
    --font-size-tagline:      {{ settings.font_size_tagline | append: "px" | default: "18px" }};
    --font-spacing-xs:        {{ settings.font_spacing_xs | append: 'em' | default: "-0.04em" }};
    --font-spacing-sm:        {{ settings.font_spacing_sm | append: 'em' | default: "-0.03em" }};
    --font-spacing-md:        {{ settings.font_spacing_md | append: 'em' | default: "-0.02em" }};
    --font-spacing-lg:        {{ settings.font_spacing_lg | append: 'em' | default: "0.07em" }};
    --font-spacing-xl:        {{ settings.font_spacing_xl | append: 'em' | default: "0.1em" }};
    --font-weight-h1:         {{ settings.font_weight_h1 | default: "400" }};
    --font-weight-h2:         {{ settings.font_weight_h2 | default: "400" }};
    --font-weight-h3:         {{ settings.font_weight_h3 | default: "400" }};
    --font-weight-header:     {{ settings.font_weight_header | default: "400" }};
    --font-weight-light:      {{ settings.font_weight_light | default: "300" }};
    --font-weight-regular:    {{ settings.font_weight_regular | default: "400" }};
    --font-weight-medium:     {{ settings.font_weight_medium | default: "500" }};
    --font-weight-semibold:   {{ settings.font_weight_semibold | default: "600" }};
    --font-weight-bold:       {{ settings.font_weight_bold | default: "700" }};
    --font-weight-extrabold:  {{ settings.font_weight_extrabold | default: "800" }};

    {% case settings.corner_radius %}
      {%- when 'square' -%}
        --border-radius-sm: 0;
        --border-radius-md: 0;
        --border-radius-lg: 0;
        --border-radius-checkbox: 0;
        --border-radius-badge: 0;
        --border-radius-block: 0;
        --border-radius-button: 0;
        --border-radius-gradually: 0;
      {%- when 'rounded' -%}
        --border-radius-sm: 8px;
        --border-radius-md: 16px;
        --border-radius-lg: 8px;
        --border-radius-checkbox: 4px;
        --border-radius-badge: 8px;
        --border-radius-block: 16px;
        --border-radius-button: 8px;
        --border-radius-gradually: 8px;
        {%- when 'fully_round' -%}
        --border-radius-sm: 8px;
        --border-radius-md: 16px;
        --border-radius-lg: 24px;
        --border-radius-checkbox: 4px;
        --border-radius-badge: 8px;
        --border-radius-block: 24px;
        --border-radius-button: 50px;
        --border-radius-gradually: 16px;
    {% endcase %}

    {% case settings.social_size %}
      {%- when 'sm' -%}
        --social-size: 14px;
      {%- when 'md' -%}
        --social-size: 17px;
      {%- when 'lg' -%}
        --social-size: 20px;
    {% endcase %}

    {% case settings.social_spacing %}
      {%- when 'sm' -%}
        --social-spacing: 5px;
      {%- when 'md' -%}
        --social-spacing: 7px;
      {%- when 'lg' -%}
        --social-spacing: 9px;
    {%- endcase -%}
  }

  #cc-main {
    --cc-font-family: var(--font-body);

    --cc-bg: var(--background-primary);
    --cc-primary-color: var(--color-primary);
    --cc-secondary-color: var(--color-primary);

    --cc-btn-primary-bg: var(--background-accent);
    --cc-btn-primary-color: var(--color-accent);
    --cc-btn-primary-border-color: transparent;
    --cc-btn-primary-hover-bg: var(--background-accent-hover);
    --cc-btn-primary-hover-border-color: var(--background-accent-hover);

    --cc-btn-secondary-bg: transparent;
    --cc-btn-secondary-color: var(--color-primary);
    --cc-btn-secondary-border-color: var(--background-accent);
    --cc-btn-secondary-hover-bg: var(--background-accent-secondary-hover);
    --cc-btn-secondary-hover-border-color: var(--background-accent-secondary-hover);
    --cc-btn-secondary-hover-color: var(--color-primary);

    --cc-cookie-category-block-bg: transparent;
    --cc-cookie-category-block-hover-bg: transparent;

    --cc-toggle-readonly-bg: var(--background-accent-hover);
    --cc-toggle-readonly-knob-icon-color: var(--background-accent-hover);
    --cc-toggle-on-bg: var(--background-accent);

    .pm__section-arrow {
      background: none !important;
    }
  }
</style>
