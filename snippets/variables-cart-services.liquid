{% style %}
  bq-cart-services {
    line-height: var(--font-height-sm);
    --service-checkbox-border: 1px solid var(--color-primary);
    --service-checkbox-border-radius: var(--border-radius-checkbox);
    --service-checkbox-color: transparent;
    --service-checkbox-color-checked: var(--background-accent);
    --service-checkbox-icon-color: var(--color-accent);
    --service-checkbox-size: calc(var(--font-size-large) + 2px);
    --service-name-font-size: var(--font-size-regular);
    --service-price-font-size: var(--font-size-regular);
    --service-title-font-size: var(--font-size-large);
    --services-container-background: transparent;
    --services-container-border: 1px solid var(--color-border);
    --services-container-border-radius: var(--border-radius-block);
    --services-container-padding: 16px;
    --services-text-color: var(--color-primary);
  }
{% endstyle %}
