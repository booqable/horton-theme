      {
        "type": "checkbox",
        "id": "full_width",
        "default": false,
        "label": "Stretch slides to edges of the screen"
      },
      {
        "type": "checkbox",
        "id": "show_navigation",
        "default": true,
        "label": "Show navigation buttons"
      },
      {
        "type": "number",
        "id": "timer",
        "label": "Rotation time",
        "min": 0,
