{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}
  {{ "testimonials.css" | asset_url | stylesheet_tag }}

  {%- assign button_label          = section.settings.button_label -%}
  {%- assign button_url            = section.settings.button_url -%}
  {%- assign carousel              = false -%}
  {%- assign color_scheme          = section.settings.color_scheme -%}
  {%- assign full_width            = section.settings.full_width -%}
  {%- assign heading_centering     = section.settings.heading_centering -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign show_carousel         = section.settings.show_carousel -%}
  {%- assign show_navigation       = section.settings.show_navigation -%}
  {%- assign show_stars            = section.settings.show_stars -%}
  {%- assign tag                   = section.settings.tag -%}
  {%- assign timer                 = section.settings.timer -%}
  {%- assign title                 = section.settings.title -%}

  {%- if blocks.size > 1 and show_carousel -%}
    {{ "carousel.css" | asset_url | stylesheet_tag }}

    {%- assign carousel = true -%}
    {%- assign timer_val = timer | plus: 0 -%}
  {%- endif -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- case padding_top -%}
      {%- when 'small' -%}
        --padding-top: 40px;
      {%- when 'medium' -%}
        --padding-top: 80px;
      {%- when 'large' -%}
        --padding-top: 120px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'small' -%}
        --padding-bottom: 40px;
      {%- when 'medium' -%}
        --padding-bottom: 80px;
      {%- when 'large' -%}
        --padding-bottom: 120px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'small' -%}
        --padding-top-mobile: 32px;
      {%- when 'medium' -%}
        --padding-top-mobile: 64px;
      {%- when 'large' -%}
        --padding-top-mobile: 96px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'small' -%}
        --padding-bottom-mobile: 32px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 64px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 96px;
    {%- endcase -%}
  {%- endcapture -%}

  {%- capture slide_variables -%}
    {%- if full_width -%}
      --slide-width: 100%;
      --slide-width-mobile: 100%;
    {%- else -%}
      --slide-width: 328px;
      --slide-width-mobile: 280px;
    {%- endif -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div class="testimonials__wrapper color-{{ color_scheme.id }}{% if padding_top != blank or padding_top_mobile != blank %} testimonials__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} testimonials__wrapper--padding-bottom{%- endif -%}" style="{{- variables | escape -}}">
    <div class="testimonials__container container section-title">
      {%- render 'section-title',
          button_label: button_label,
          button_url: button_url,
          centering: heading_centering,
          tag: tag,
          title: title
      -%}

      <div class="testimonials__list{% if carousel %} carousel carousel__pause{% if show_navigation %} carousel--controls{%- endif -%}{%- endif -%}" style="{{- slide_variables | escape -}}"{% if carousel %}{% if timer_val > 0 %} data-carousel-timer="{{- timer_val -}}"{% endif %} aria-label="Carousel"{%- endif -%}>
        {%- if carousel -%}
          <div class="carousel__list">
            <div class="carousel__wrapper{% if full_width %} carousel__wrapper--full-width{% endif %}">
        {%- endif -%}

        {%- for block in section.blocks -%}
          {%- assign description = block.settings.description -%}
          {%- assign name        = block.settings.name -%}
          {%- assign position    = block.settings.position -%}
          {%- assign stars       = block.settings.stars -%}

          {%- capture stars_rendering -%}
            {%- assign stars_full = stars -%}
            {%- assign stars_empty = stars | plus: 1 -%}

            <div class="testimonials__stars">
              {%- for i in (1..stars_full) -%}
                <span class="testimonials__star">
                  <i class="fa fa-star" aria-hidden="true"></i>
                </span>
              {%- endfor -%}
              {%- for i in (stars_empty..5) -%}
                <span class="testimonials__star">
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                </span>
              {%- endfor -%}
            </div>
          {%- endcapture -%}

          {%- if carousel -%}
            <div class="carousel__item" id="{{- block.id -}}" data-block-key="{{- block.id -}}" data-block-name="{{- block.name -}}">
              <div class="carousel__inner">
          {%- endif -%}

          {%- if description != blank -%}
            <blockquote class="testimonials__blockquote text-large"{% unless carousel %}id="{{- block.id -}}" data-block-key="{{- block.id -}}" data-block-name="{{- block.name -}}"{%- endunless -%}>
              {%- if show_stars == "above" -%}
                {{- stars_rendering -}}
              {%- endif -%}

              <q class="testimonials__quote bq-content rx-content text-weight--medium">
                {{- description -}}
              </q>

              {%- if show_stars == "below" -%}
                {{- stars_rendering -}}
              {%- endif -%}

              {%- if name != blank or position != blank -%}
                <cite class="testimonials__cite">
                  {%- if name != blank -%}
                    {{- name -}}
                  {%- endif -%}
                  {%- if position != blank -%}
                    <small class="testimonials__small text-regular">
                      {{- position -}}
                    </small>
                  {%- endif -%}
                </cite>
              {%- endif -%}
            </blockquote>
          {%- endif -%}

          {%- if carousel -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}

        {%- if carousel -%}
            </div>
          </div>

          <div class="carousel__navigation hidden"{% unless show_navigation %} style="display: none;"{% endunless %} role="navigation" aria-label="Carousel navigation">
            <span class="carousel__btn prev" aria-label="Prev slide">
              Previous slide
              {%- render 'icon-arrow-right-full' -%}
            </span>
            <span class="carousel__btn next" aria-label="Next slide">
              Next slide
              {%- render 'icon-arrow-right-full' -%}
            </span>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Testimonials",
    "description": "Show testimonials from individual customers in a sliding carousel",
    "tag": "section",
    "class": "testimonials",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "set-1"
      },
      {
        "type": "text",
        "id": "tag",
        "label": "Tagline",
        "default": "Tagline"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "What our customers say"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "SEE ALL"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button link",
        "default": "booqable://root"
      },
      {
        "type": "select",
        "id": "show_stars",
        "label": "Stars placement",
        "options": [
          {
            "value": "above",
            "label": "Above quote"
